<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/basic_info"
                android:textColor="@color/font_1"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/dimen_5dp"
                android:gravity="center_vertical"
                android:text="河段位置"
                android:textColor="@color/font_blue"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icon_start" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/font_green2"
                android:textSize="15sp"
                tools:text="珊瑚砂水库北出水口" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icon_end" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/font_red"
                android:textSize="15sp"
                tools:text="转塘双浦交界处" />

        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="河道长度："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv6"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="所属区划："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="河长职责："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_resp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv1"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="涉及乡镇："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sheji_zhen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv3"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="流域面积："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mianji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv4"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <include layout="@layout/line_defalt_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="河段等级："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv5"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="整治目标："
                android:textColor="@color/font_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv2"
                android:gravity="center_vertical"
                android:textColor="@color/font_1"
                android:textSize="15sp"
                tools:text="@string/see_locate" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

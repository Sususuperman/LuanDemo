<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_default"
    android:padding="@dimen/dimen_10dp"
    tools:context="com.hywy.luanhzt.activity.CreateLogActivity">

    <com.hywy.luanhzt.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_default"
                android:gravity="center"
                android:hint="请输入问题主题（名称）"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/font_1"
                android:textColorHint="@color/font_gray"
                android:textSize="16sp" />

            <include layout="@layout/layout_pro_head" />

            <include layout="@layout/layout_pro_info" />
        </LinearLayout>
    </com.hywy.luanhzt.view.MyScrollview>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/choose_btn"
        android:gravity="center"
        android:text="@string/text_sumbit"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>

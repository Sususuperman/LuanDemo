<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_default"
    android:padding="@dimen/dimen_10dp"
    tools:context="com.hywy.luanhzt.activity.CreateEventActivity">

    <com.hywy.luanhzt.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_default"
                android:gravity="center"
                android:hint="请输入事物名称"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/font_1"
                android:textColorHint="@color/font_gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/bg_btn_default"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_5dp">

                <LinearLayout
                    android:id="@+id/type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="事物来源："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>

                <include layout="@layout/line_defalt_h" />

                <LinearLayout
                    android:id="@+id/river_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="所属河段："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_river"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>

                <include layout="@layout/line_defalt_h" />

                <LinearLayout
                    android:id="@+id/shuizhi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="相关水质站："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_shuizhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>

                <include layout="@layout/line_defalt_h" />

                <LinearLayout
                    android:id="@+id/shuiwen_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="相关水文站："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_shuiwen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:id="@+id/down_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>


                <include layout="@layout/line_defalt_h" />

                <LinearLayout
                    android:id="@+id/user_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="接收人员："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>

                <include layout="@layout/line_defalt_h" />

                <LinearLayout
                    android:id="@+id/limit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="完成时限："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/font_1"
                        android:textSize="15sp"
                        tools:text="@string/see_locate" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:src="@drawable/ic_down_arrow"
                        tools:text="@string/see_locate" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/bg_btn_default"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:text="事物内容："
                    android:textColor="@color/font_gray"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minLines="2"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:textColor="@color/font_1"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/bg_btn_default"
                android:orientation="vertical"
                android:paddingLeft="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:text="添加附件："
                        android:textColor="@color/font_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:text="（选填、提供相关照片）"
                        android:textColor="@color/bg_gray_light"
                        android:textSize="14sp" />
                </LinearLayout>

                <GridView
                    android:id="@+id/image_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />
            </LinearLayout>
        </LinearLayout>
    </com.hywy.luanhzt.view.MyScrollview>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/choose_btn"
        android:gravity="center"
        android:text="@string/text_sumbit"
        android:textColor="@color/white"
        android:textSize="17sp" />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.cs.common.view.SwipeRefreshview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_10dp"
    android:background="@color/activity_bg_default"
    tools:context="com.hywy.luanhzt.activity.VideoListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_search"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/font_1"
                android:textColorHint="@color/gray_light"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:src="@drawable/icon_down_view" />
        </RelativeLayout>

        <com.hywy.luanhzt.view.MyRecycleView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.cs.common.view.SwipeRefreshview>

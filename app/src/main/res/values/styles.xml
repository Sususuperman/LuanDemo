    <style name="listTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxEms">8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/font_1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="listContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/font_2</item>
        <item name="android:textColorHint">@color/font_3</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--表单标题style-->
    <style name="formTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/font_2</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--表单EditText style-->
    <style name="formEditStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/font_2</item>
        <item name="android:textColorHint">@color/material_text_color_black_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

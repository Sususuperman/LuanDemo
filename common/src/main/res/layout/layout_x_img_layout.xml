<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/x_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x_edit_bg"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <com.cs.common.view.xview.XEditView
            android:id="@+id/x_editview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:textSize="@dimen/button_text_size" />

        <LinearLayout
            android:id="@+id/x_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_restrictionhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/material_text_color_black_hint"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/x_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
